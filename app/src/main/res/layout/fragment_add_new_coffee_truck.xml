<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.main.AddNewCoffeeTruck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/pickImageLayout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_line"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/selectedImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/pick_image" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Pick image (JPEG, JPG, PNG)"
                android:textAlignment="center" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם עגלת הקפה" />

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="מיקום" />

        <EditText
            android:id="@+id/editTextKosher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="כשר/לא כשר" />

        <EditText
            android:id="@+id/editTextOpeningHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שעות פתיחה" />

        <EditText
            android:id="@+id/editTextRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="המלצות" />

        <EditText
            android:id="@+id/editTextTripSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="המלצות לטיול בקרבת העגלה" />

        <EditText
            android:id="@+id/editTextReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ביקורות" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="הוסף עגלת קפה" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
