<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#679591"
    tools:context=".UserProfileCreation">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textColor="#EBE5E5"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="97dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvAddIdUser"
        android:layout_width="43dp"
        android:layout_height="32dp"
        android:text="ID"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="364dp" />

    <EditText
        android:id="@+id/etAddNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddNameUser"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="80dp" />

    <EditText
        android:id="@+id/etAddIdUser"
        android:layout_width="211dp"
        android:layout_height="31dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddIdUser"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/btnCancleProfile"
        android:layout_width="171dp"
        android:layout_height="55dp"
        android:backgroundTint="#009688"
        android:text="CANCLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnSaveProfile"
        tools:layout_editor_absoluteY="642dp" />

    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="163dp"
        android:layout_height="55dp"
        android:backgroundTint="#009688"
        android:text="SAVE"
        app:layout_constraintEnd_toStartOf="@+id/btnCancleProfile"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="642dp" />

    <TextView
        android:id="@+id/tvAddNameUser"
        android:layout_width="73dp"
        android:layout_height="42dp"
        android:layout_marginTop="38dp"
        android:text="NAME"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="2dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="544dp" />

</androidx.constraintlayout.widget.ConstraintLayout>